@{
    ViewBag.Title = "TRANG CHỦ";
    var sumUser = ViewData["data_SumUser"]; 
    var sumAdmin = ViewData["data_SumAdmin"];
    var sumManager = ViewData["data_SumManager"];
    var sumDepartment = ViewData["data_SumDepartment"];
    var sumDetailJob = ViewData["data_SumDetailJob"];
}

<style>
    .card-custom {
        height: 200px;
    }
</style>
<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white card-custom">
            <div class="card-body">
                <img src="~/Content/images/l-circle.png" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">
                    TỔNG SỐ NHÂN VIÊN TRONG CÔNG TY <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h6>Số quản lý là: @sumManager</h6>
                <h6>Số Admin là: @sumAdmin</h6>
                <h6>Số nhân viên là: @sumUser</h6>
               
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white card-custom">
            <div class="card-body">
                <img src="~/Content/images/l-circle.png" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">
                  ĐỐI TÁC LIÊN KẾT <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@sumDepartment</h2>
               
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white card-custom">
            <div class="card-body">
                <img src="~/Content/images/l-circle.png" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">
                    TỔNG SỐ CÔNG VIỆC <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@sumDetailJob</h2>
              
            </div>
        </div>
    </div>
</div>

